<h3 class="ui header">{{t "forms.i-i-s-behkap-визит-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.визита
      class=(if (v-get validationModel "визита" "isInvalid") "error")
      label=(t "forms.i-i-s-behkap-визит-e.визита-caption")
      data-test-i-i-s-behkap-визит-e-визита=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "визита" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.код
      class=(if (v-get validationModel "код" "isInvalid") "error")
      label=(t "forms.i-i-s-behkap-визит-e.код-caption")
      data-test-i-i-s-behkap-визит-e-код=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "код" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-behkap-визит-e.время-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.время
      class=(if (v-get validationModel "время" "isInvalid") "error")
      data-test-i-i-s-behkap-визит-e-время=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "время" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-behkap-визит-e.клиент-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиент
      displayAttributeName="фИО"
      autocomplete=true
      relationName="клиент"
      projection="КлиентL"
      title=(t "forms.i-i-s-behkap-визит-e.клиент-caption")
      readonly=readonly
      componentName="клиентLookup"
      class=(if (v-get validationModel "клиент" "isInvalid") "error")
      data-test-i-i-s-behkap-визит-e-клиент=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиент" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-behkap-визит-e.записьВизита-caption"}}</label>
    {{flexberry-groupedit
      componentName="записьВизитаGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.записьВизита
      content=model.записьВизита
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "записьВизита" "isInvalid") "error")
      data-test-i-i-s-behkap-визит-e-записьВизита=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "записьВизита" "message")}}
  </div>
</form>
